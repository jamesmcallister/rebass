{
  "compilerOptions": {
    "allowJs": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "dist",
    "jsx": "react",
    "lib": ["dom", "es5", "es2015", "es2016", "es2017", "esnext"]
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules"],
  "typeRoots": ["node_modules/@types"]
}
